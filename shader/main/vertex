// vim: ft=glsl noet ts=4 sw=4 sts=0
#version 330
layout(location=0) in vec2 vpos;
layout(location=1) in vec3 vcolor;
out vec4 gcolor;
uniform float time;

void main()
{
	gl_Position = vec4(vpos + length(vpos) * 0.2 * vec2(cos(time*4+vpos.x), sin(time*4+vpos.y)), 0, 1);
	gcolor = vec4(vcolor, 1);
}

